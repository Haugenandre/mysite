@import "https://fonts.googleapis.com/css?family=Amiri|Roboto 100 400&display=swap";header{background:#fff;border-bottom:2px solid #18243f;position:fixed;padding:25px;top:0;left:0;width:100%;z-index:10;pointer-events:none}.header-inner{position:relative;z-index:9;display:flex;justify-content:space-between;align-items:center}.header-logo{width:100px;margin:0}html{font-size:18px;background:0 0}@media screen and (max-width:991px){html{font-size:16px}}body{background:#fff;margin:0;color:#153559;min-height:3000px}.grid{background:#fff;padding-left:5em;padding-right:5em;padding-top:5em;padding-bottom:5em}h1,h2,h3,h4{font-family:Amiri;font-weight:700;letter-spacing:.5;color:#153559}p,a{font-family:roboto,sans-serif;font-weight:200;margin-bottom:3em}a{text-decoration:none}.container{min-height:700px;margin-top:100px}.top{margin-top:98px}.btn{display:inline-block;padding:20px 30px;border-radius:50px;background:#e9425e;min-width:150px;font-weight:400;text-align:center;color:#fff}.btn:hover{background:#ef425e}.btn:active{background:#e9425e;border:5px solid rgba(200,66,94,.8);padding:15px 25px}.cta{position:relative;margin:auto;padding:20px 30px;transition:all .2s ease}.cta:before{content:"";position:absolute;top:0;left:0;display:block;border-radius:50px;background:#e9425e;width:60px;height:60px;transition:all .5s ease}.cta span{position:relative;font-size:18px;font-weight:500;color:#153559;vertical-align:middle}.cta svg{position:relative;top:0;margin-left:10px;fill:none;stroke-linecap:round;stroke-linejoin:round;stroke:#153559;stroke-width:2;transform:translateX(-7px);transition:all .5s ease}.cta:hover span{color:#fff}.cta:hover svg{transform:translateX(0);transition:all .5s ease;stroke:#fff}.cta:hover:before{width:100%}.cta:active.cta{transform:translateX(0);padding:22px 30px}.cta:active:before{border:5px solid rgba(200,66,94,.8)}.top-image{width:700px;height:500px}.banner-image{width:700px;height:500px}@media(min-width:112.5em){.grid{padding-left:12vw;padding-right:12vw}}